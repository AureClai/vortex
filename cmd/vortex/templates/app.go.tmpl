type App struct {
	vdom.StatefulComponentBase[AppState]
}

func NewApp(r *renderer.Renderer) *App {
	app := &App{}

	reRender := func() {
		r.Render(app.Render())
	}

	initialState := AppState{}
	app.StatefulComponentBase = vdom.NewStatefulComponent("div", initialState, reRender)

	return app
}

